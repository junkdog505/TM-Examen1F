<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pizzas">

    <ImageView
        android:id="@+id/pizzaLogo"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizzalogo" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="Mostrador de pizzas"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="438dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/pizzaPeperonniImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/pizzapeperonni" />

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pizzaPeperonniNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Peperonni"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pizzaPeperonniPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 18.50"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/pizzaPeperonniCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/pizzaHawaianaImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/pizzahawaiana" />

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pizzaHawaianaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza Hawaiana"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pizzaHawaianaPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 22.00"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/pizzaHawaianaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pizzaMarheritaImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/pizzamargherita" />

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pizzaMarheritaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza pizzaMarherita"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pepsiPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 25.99"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/pizzaMarheritaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>