<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bebidas">

    <ImageView
        android:id="@+id/bebidasLogo"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bebidas" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="175dp"
        android:layout_height="145dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="Mostrador de bebidas"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="521dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/inkaColaImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/inkakola" />
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fantaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inka-Cola 600ml"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/inkaColaPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 2.50"
                    android:textSize="14sp" />
            </LinearLayout>
            <CheckBox
                android:id="@+id/inkaColaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/fantaImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/fanta" />
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fantaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fanta 500ml"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fantaPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 2.00"
                    android:textSize="14sp" />
            </LinearLayout>
            <CheckBox
                android:id="@+id/fantaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pepsiImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/pepsi" />
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pepsiNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pepsi 500ml"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pepsiPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 2.00"
                    android:textSize="14sp" />
            </LinearLayout>
            <CheckBox
                android:id="@+id/pepsiCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/energinaImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/energina" />
            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/energinaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="energina 500ml"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/energinaPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 1.00"
                    android:textSize="14sp" />
            </LinearLayout>
            <CheckBox
                android:id="@+id/energinaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cocacolaImg"
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:src="@drawable/cocacola" />

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="78dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cocacolaNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coca-Cola"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cocacolaPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 3.00"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cocacolaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="79dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>